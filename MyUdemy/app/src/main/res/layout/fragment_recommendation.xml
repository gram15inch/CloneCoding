<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.learning.myudemy.presentation.viewModel.RecommendationViewModel" />
        <variable name="webTitle" type="String" />
        <variable name="reactTitle" type="String" />
        <variable name="pythonTitle" type="String" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:overScrollMode="never"
        tools:context=".presentation.ui.recommendation.RecommendationFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/banner_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bn_banner_main" />
            <include layout="@layout/layout_recommend_intro" />

            <include
                layout="@layout/layout_recommend_lecture"
                android:background="@color/grey"
                app:lectureTitle="@{webTitle}"
                app:webList="@{viewModel.webLectures}" />
            <include
                layout="@layout/layout_banner_info"/>
            <include
                layout="@layout/layout_recommend_lecture"
                app:lectureTitle="@{reactTitle}"
                app:webList="@{viewModel.reactLectures}" />

            <include
                layout="@layout/layout_recommend_lecture"
                app:lectureTitle="@{pythonTitle}"
                app:webList="@{viewModel.pythonLectures}" />
        </LinearLayout>

    </ScrollView>
</layout>