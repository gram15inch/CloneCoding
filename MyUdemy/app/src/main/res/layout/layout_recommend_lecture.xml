<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="java.util.List" />
        <import type="com.learning.myudemy.domain.model.Lecture"/>
        <variable
            name="webList"
            type="List&lt;Lecture>" />
        <variable
            name="lectureTitle"
            type="String" />
    </data>
    <merge
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/recommend_lecture_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/section_start_margin"
            android:layout_marginBottom="@dimen/recommend_lecture_holder_section_title_margin"
            android:text="@{lectureTitle}" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommend_lecture_contents_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/section_start_margin"
            android:layout_marginBottom="@dimen/section_start_margin"
            app:lectureList="@{webList}" />
    </merge>
</layout>