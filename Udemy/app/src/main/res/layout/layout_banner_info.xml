<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="@dimen/section_start_margin"
        android:layout_marginBottom="@dimen/section_start_margin"
        android:layout_marginEnd="@dimen/section_start_margin"
        android:background="@drawable/sp_round_outline">

        <TextView
            android:id="@+id/info_text_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="최고의 회사들이 Udemy를 신뢰합니다"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/info_logo_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/info_logo_nasdaq"
            app:layout_constraintEnd_toStartOf="@+id/info_logo_nasdaq"
            app:layout_constraintTop_toTopOf="@+id/info_logo_nasdaq"
            app:srcCompat="@drawable/lg_box" />

        <ImageView
            android:id="@+id/info_logo_nasdaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/info_text_main"
            app:layout_constraintStart_toStartOf="@+id/info_text_main"
            app:layout_constraintTop_toBottomOf="@+id/info_text_main"
            app:srcCompat="@drawable/lg_nasdaq" />

        <ImageView
            android:id="@+id/info_logo_volkswagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/info_logo_nasdaq"
            app:layout_constraintStart_toEndOf="@+id/info_logo_nasdaq"
            app:layout_constraintTop_toTopOf="@+id/info_logo_nasdaq"
            app:srcCompat="@drawable/lg_volkswagen" />

        <TextView
            android:id="@+id/info_text_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Udemy Business 사용해보기"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/info_logo_nasdaq"
            app:layout_constraintStart_toStartOf="@+id/info_logo_nasdaq"
            app:layout_constraintTop_toBottomOf="@+id/info_logo_nasdaq" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>