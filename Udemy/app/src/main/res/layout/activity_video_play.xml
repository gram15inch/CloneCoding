<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.video.VideoPlayActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/video_play_main"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video_play_main">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/ctl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentScrim="?attr/colorOnPrimary"
                    android:background="?attr/colorOnPrimary"
                    app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp">
                            <TextView
                                android:id="@+id/video_play_appbar_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:adjustViewBounds="true"
                                android:maxLines="1"
                                android:text="Learn Android Application Development"
                                android:textColor="@color/colorPrimary"
                                android:textSize="20sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/video_play_appbar_sub_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:adjustViewBounds="true"
                                android:maxLines="1"
                                android:text="ProgramMe Programming"
                                android:textColor="@color/colorSecondary"
                                android:textSize="16sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/video_play_appbar_title" />
                        </androidx.constraintlayout.widget.ConstraintLayout>


                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/main_tabLayout"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="강의" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="더 보기" />
                </com.google.android.material.tabs.TabLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/teal_200" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/grey" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/teal_200" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/grey" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/teal_200" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/grey" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/teal_200" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/grey" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:background="@color/teal_200" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
