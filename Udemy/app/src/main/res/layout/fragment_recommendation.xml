<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="testName1"
            type="String" />

        <variable
            name="testName2"
            type="String" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="true"
        android:overScrollMode="never"
        tools:context=".presentation.recommendation.RecommendationFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgTest"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bn_banner1" />

            <include
                layout="@layout/layout_recommend_intro"/>

            <include
                layout="@layout/layout_recommend_lecture"
                app:includeString="@{testName1}" />

            <include
                layout="@layout/layout_recommend_lecture"
                app:includeString="@{testName2}" />


        </LinearLayout>

    </ScrollView>
</layout>